

local utils_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/utils.lua"
local shell_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/mtmshell.lua"
local commands_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/commands.lua"
local coroutines_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/coroutines.lua"



local utils_data = http.get(utils_url).readAll()
local shell_data = http.get(shell_url).readAll()
local commands_data = http.get(commands_url).readAll()
local coroutines_data = http.get(coroutines_url).readAll()



shell.run('mkdir mtmos')
shell.run('mkdir mtmos/core')



local utils = fs.open("mtmos/core/utils", 'w')
utils.write(utils_data)
utils.close()

local shell = fs.open("mtmos/core/mtmshell", 'w')
shell.write(shell_data)
shell.close()

local commands = fs.open("mtmos/core/commands", 'w')
commands.write(commands_data)
commands.close()

local coroutines = fs.open("mtmos/core/coroutines", 'w')
coroutines.write(coroutines_data)
coroutines.close()



local startup = fs.open("startup", 'w')
startup.write([[
shell.run("mtmos/core/mtmshell run")
]])
startup.close()
