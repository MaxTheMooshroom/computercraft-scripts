local utils_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/utils.lua"
local boot_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/boot.lua"
local coroutines_url = "https://raw.githubusercontent.com/MaxTheMooshroom/MTMOS/redo/core/coroutines.lua"

local utils_data = http.get(utils_url).readAll()
local boot_data = http.get(shell_url).readAll()
local coroutines_data = http.get(coroutines_url).readAll()

shell.run('mkdir mtmos')
shell.run('mkdir mtmos/core')

local utils = fs.open("mtmos/core/utils.lua", 'w')
utils.write(utils_data)
utils.close()

local boot = fs.open("mtmos/core/boot.lua", 'w')
boot.write(boot_data)
boot.close()

local coroutines = fs.open("mtmos/core/coroutines.lua", 'w')
coroutines.write(coroutines_data)
coroutines.close()

local startup = fs.open("startup", 'w')
startup.write([[
shell.run("mtmos/core/boot run")
]])
startup.close()
